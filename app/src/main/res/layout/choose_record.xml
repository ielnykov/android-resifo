<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="New\nRecord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonNewRecord"
            android:background="@mipmap/add_rec_wide"
            android:textAlignment="textEnd"
            android:textSize="36sp"
            android:textColor="?attr/colorControlNormal"
            android:onClick="newRecord" />

        <Button
            android:text="Find\nRecord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/buttonFindRecord"
            android:background="@mipmap/find_rec_wide"
            android:textAlignment="textEnd"
            android:textSize="36sp"
            android:textColor="?attr/colorControlNormal"
            android:onClick="findRecord" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:gravity="bottom">

        <TextView
            android:text="Legal Information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView35"
            android:textAlignment="center"
            android:textColor="@android:color/holo_red_dark"
            android:onClick="information"
            android:clickable="true"
            android:textSize="24sp" />
    </LinearLayout>

</LinearLayout>